{
  "cli": {
    "version": ">= 0.24.15"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "resourceClass": "m1-medium",
        "simulator": true,
        "bundleIdentifier": "com.yourcompany.yourapp.dev"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "applicationId": "com.yourcompany.yourapp.dev"
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m1-medium",
        "simulator": false,
        "bundleIdentifier": "com.yourcompany.yourapp.preview"
      },
      "android": {
        "buildType": "apk",
        "applicationId": "com.yourcompany.yourapp.preview"
      },
      "env": {
        "NODE_ENV": "staging"
      }
    },
    "production": {
      "ios": {
        "resourceClass": "m1-medium",
        "autoIncrement": true,
        "bundleIdentifier": "com.yourcompany.yourapp"
      },
      "android": {
        "autoIncrement": true,
        "applicationId": "com.yourcompany.yourapp"
      },
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "1234567890",
        "appleTeamId": "ABCDEF1234"
      },
      "android": {
        "serviceAccountKeyPath": "../path/to/api-key.json",
        "track": "internal"
      }
    }
  }
}
