{
  "expo": {
    "name": "Dixon Smart Repair",
    "slug": "dixon-smart-repair",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dixonsmartrepair.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e40af"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.dixonsmartrepair.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static"
    },
    "scheme": "dixon-smart-repair",
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Dixon Smart Repair to access your camera to scan VIN numbers and capture vehicle issues."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Dixon Smart Repair to access your microphone for voice-enabled diagnostics."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
